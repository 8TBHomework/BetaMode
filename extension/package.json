{
  "name": "betamode",
  "scripts": {
    "build": "parcel build src/manifest.json --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:js": "xo",
    "test": "run-p lint:* build",
    "watch": "parcel watch src/manifest.json --dist-dir dist --no-cache --no-hmr"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "browser"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-xo"
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "webext-options-sync": "^3.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0",
    "@parcel/transformer-image": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "stylelint": "^14.0.1",
    "stylelint-config-xo": "^0.20.1",
    "xo": "^0.46.3"
  },
  "webExt": {
    "sourceDir": "distribution"
  }
}
